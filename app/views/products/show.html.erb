<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= @product.image %>
</p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @product.rating %>
</p>

<p>
  <strong>User:</strong>
  <%= @product.user %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<div>
  <% @reviews.each do |review| %>
    <div>
      <strong><%= review.user.user_name %></strong>
      <br />
      <p><%= review.body %></p>
      <% if user_signed_in? && review.user == current_user %>
        <p><%= link_to 'Delete', review_path(review), method: :delete %></p>
      <% end %>
    </div>
  <% end %>
  <% if user_signed_in? %>
    <%= render 'reviews/form' %>
  <% end %>
</div>

<%= link_to 'Rreview', reviews_path %> |
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
